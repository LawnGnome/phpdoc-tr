<refentry xml:id="function.is-binary" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>is_binary</refname>
  <refpurpose>Bir değişkenin bir ikil dizge içerip içermediğine bakar
  </refpurpose>
 </refnamediv>

 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>bool</type><methodname>is_binary</methodname>
   <methodparam><type>mixed</type><parameter>değişken</parameter></methodparam>
  </methodsynopsis>
  <para>
   Belirtilen değişken bir ikil dizge içeriyorsa &true; döner.
  </para>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    <varlistentry>
     <term><parameter>değişken</parameter></term>
     <listitem>
      <para>
       Sınanacak değişken.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Belirtilen değişken bir ikil dizge içeriyorsa &true;, aksi
   takdirde &false; döner.
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>- <function>is_binary</function> örneği</title>
    <programlisting role="php">
<![CDATA[
<?php
// Bir unicode dzge tanımlayalım
$unicode = 'Bu bir unicode dizgedir';

// 'b' önekiyle bir ikil dizge tanımlayalım
// Bu PHP 5.2.1 ve sonrasında kullanılabilir,
// fakat sadece PHP 6.0.0'dan itibaren etkilidir.
$binary = b'Bu bir ikil dizgedir';

var_dump(is_binary($unicode), is_binary($binary));
?>
]]>
      </programlisting>
      &example.outputs;
      <screen>
<![CDATA[
bool(false)
bool(true)
]]>
    </screen>
   </example>
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><function>is_buffer</function></member>
    <member><function>is_string</function></member>
    <member><function>is_unicode</function></member>
   </simplelist>
  </para>
 </refsect1>
</refentry>

