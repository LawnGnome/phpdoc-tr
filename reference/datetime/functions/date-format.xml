<refentry xml:id="function.date-format" xmlns="http://docbook.org/ns/docbook">
 <refnamediv>
  <refname>date_format</refname>
  <refpurpose>Tarihi belirtilen biçimde döndürür</refpurpose>
 </refnamediv>
 <refsect1 role="description">
  &reftitle.description;
  <methodsynopsis>
   <type>string</type><methodname>date_format</methodname>
   <methodparam><type>DateTime</type><parameter>nesne</parameter></methodparam>
   <methodparam><type>string</type><parameter>biçim</parameter></methodparam>
  </methodsynopsis>
  <methodsynopsis>
   <type>string</type><methodname>DateTime::format</methodname>
   <methodparam><type>string</type><parameter>biçim</parameter></methodparam>
  </methodsynopsis>
 </refsect1>

 <refsect1 role="parameters">
  &reftitle.parameters;
  <para>
   <variablelist>
    &date.datetime.description;
    <varlistentry>
     <term><parameter>biçim</parameter></term>
     <listitem>
      <para>
       <function>date</function> işlevi tarafından kabul edilen biçim.
      </para>
     </listitem>
    </varlistentry>
   </variablelist>
  </para>
 </refsect1>

 <refsect1 role="returnvalues">
  &reftitle.returnvalues;
  <para>
   Başarılı olduğunda biçimlendirilmiş tarihi değeriyle, başarısız olduğunda
   &false; değeriyle döner.
  </para>
 </refsect1>

 <refsect1 role="examples">
  &reftitle.examples;
  <para>
   <example>
    <title>- Tarih ve zamanın yordamsal tarz kullanılarak gösterilmesi</title>
    <programlisting role="php">
<![CDATA[
<?php
date_default_timezone_set('Europe/Istanbul');

$datetime = date_create('2008-08-03 14:52:10');
echo date_format($datetime, 'jS, F Y') . "\n";
echo date_format($datetime, DATE_ATOM);
?>
]]>
    </programlisting>
   </example>
  </para>
  <para>
   <example>
	   <title>- Tarih ve zamanın nesne yönelimli tarz kullanılarak gösterilmesi
     </title>
    <programlisting role="php">
<![CDATA[
<?php
date_default_timezone_set('Europe/Istanbul');

$datetime = new DateTime('2008-08-03 14:52:10');
echo $datetime->format('jS, F Y') . "\n";
echo $datetime->format(DATE_ATOM);
?>
]]>
    </programlisting>
    &example.outputs;
    <screen>
<![CDATA[
3rd, August 2008
2008-08-03T14:52:10+03:00
]]>
    </screen>
   </example>
  </para>
 </refsect1>

 <refsect1 role="seealso">
  &reftitle.seealso;
  <para>
   <simplelist>
    <member><function>date</function></member>
   </simplelist>
  </para>
 </refsect1>

</refentry>

